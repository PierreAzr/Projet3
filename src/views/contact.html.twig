{% extends "layout.html.twig" %}

{% block title %}contact{% endblock %}

{% block contact %}href="#current"{% endblock %}

{% block content %}
<section id="current">
  <div class="container-fluid">
    <div class="starter-template" style="padding-top: 50px;">
    <div class="pass" class="row">
      <div class=" col-lg-offset-3 col-lg-6">
          <div style="text-align:center;">
            <img style="width:40%;" src="/theme/img/border.png">
          </div>
         <div class="panel">
           <div class="panel-heading">
             <h3 class="panel-title">Me contacter :</h3>
           </div>
           <div class="panel-body">
             <!-- Affiche les erreurs du formulaire -->
                           {% if  error == 'yes' %}
                               <ul>
                                  {% for error in errors %}
                                        <li style="color:red">{{error}}</li>
                                  {% endfor %}
                              </ul>
                           {% endif %}

             <form method="post" action="/contactSend/">
               <fieldset>
                 <legend style="color:#FEFEFE">Vos coordonn√©es</legend>
                 <p>
                    <label for="nom">Nom :</label>
                     </br>
                     <input style="color:#00223D; width:50%" type="text" id="name" name="name" tabindex="1" value="{{name}}"/>
                 </p>
                 <p>
                    <label for="email">Email :</label>
                    </br>
                    <input style="color:#00223D; width:50%" type="text" id="email" name="email" tabindex="2" value="{{email}}"/>
               </p>
               </fieldset>
               <fieldset>
                 <legend style="color:#FEFEFE">Votre message :</legend>
                 <p>
                   <label for="objet">Objet :</label>
                   </br>
                   <input style="color:#00223D; width:80%" type="text" id="object" name="subject" tabindex="3" value="{{subject}}"/>
                </p>
                 <p>
                    <label for="message">Message :</label>
                    </br>
                    <textarea class="com" style="color:#00223D; width:80%" id="text" name="text" tabindex="4" rows="8">{{text}}</textarea>
               </p>
               </fieldset>
               <div style="text-align:center;">
                 <input style="color:#00223D; width:200px; font-weight:bolder" type="submit" name="envoi" value="Envoyer le formulaire !" />
               </div>
             </form>
          </div>
        </div><!-- fin Panel -->
        </div>
      </div>
    </div>
  </div><!-- fin Container -->
</section>

{% endblock %}
